generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FindingSeverity {
  CRITICAL
  HIGH
  MEDIUM
  LOW
}

enum FindingStatus {
  OPEN
  FIXED
  FALSE_POSITIVE
}

enum ScanStatus {
  QUEUED
  RUNNING
  COMPLETED
  FAILED
}

model Organization {
  id                   String                @id @default(cuid())
  name                 String
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  members              User[]
  projects             Project[]
  invites              Invite[]
  integrations         Integration[]
  subscription         Subscription?
  apiKeys              APIKey[]
  auditLogs            AuditLog[]
  businessVerification BusinessVerification?
  customerBadges       CustomerBadge[]
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String?
  passwordHash  String?
  role          String         @default("member")
  avatarUrl     String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  orgId         String
  org           Organization   @relation(fields: [orgId], references: [id])
  oauthAccounts OAuthAccount[]
  profile       UserProfile?

  @@index([orgId])
}

model UserProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Personal Information
  firstName       String?
  lastName        String?
  phone           String?
  jobTitle        String?
  department      String?
  timezone        String?
  address         String?
  city            String?
  state           String?
  postalCode      String?
  country         String?

  // Bank Details (encrypted at rest)
  bankName        String?
  bankAccountName String?
  bankAccountNumber String?  // Should be encrypted
  bankBsb         String?    // BSB number (AU/NZ)
  bankRoutingNumber String?  // Should be encrypted
  bankSwiftCode   String?
  bankIban        String?    // Should be encrypted
  bankCurrency    String?    @default("USD")
  bankCountry     String?

  // Tax Information
  taxId           String?    // SSN/EIN/VAT - encrypted
  taxCountry      String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Invite {
  id         String    @id @default(cuid())
  email      String
  name       String
  role       String    @default("member")
  token      String    @unique @default(cuid())
  expiresAt  DateTime
  acceptedAt DateTime?
  createdAt  DateTime  @default(now())
  orgId      String
  org        Organization @relation(fields: [orgId], references: [id])
}

model Integration {
  id        String   @id @default(cuid())
  type      String
  name      String
  config    Json
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orgId     String
  org       Organization @relation(fields: [orgId], references: [id])

  @@index([orgId])
}

model Project {
  id          String     @id @default(cuid())
  name        String
  owner       String     @default("Unassigned")
  description String?
  scope       Json?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  orgId       String
  org         Organization @relation(fields: [orgId], references: [id])
  findings    Finding[]
  scans       Scan[]
  sbom        SBOM?

  @@index([orgId])
}

model Finding {
  id              String          @id @default(cuid())
  type            String
  title           String
  severity        FindingSeverity
  status          FindingStatus   @default(OPEN)
  description     String
  guidance        String
  reproduction    String
  filePath        String?
  lineNumber      Int?
  ticketRef       String?
  prRef           String?
  autofixAvailable Boolean        @default(false)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  projectId       String
  project         Project         @relation(fields: [projectId], references: [id])
  autofixes       Autofix[]

  @@index([projectId])
  @@index([severity])
}

model Autofix {
  id           String   @id @default(cuid())
  status       String   @default("PENDING")
  prNumber     Int?
  branchName   String?
  targetBranch String?
  diff         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  findingId    String
  finding      Finding  @relation(fields: [findingId], references: [id])
}

model Scan {
  id            String     @id @default(cuid())
  status        ScanStatus @default(QUEUED)
  progress      Int        @default(0)
  startedAt     DateTime?
  completedAt   DateTime?
  findingsCount Int        @default(0)
  createdAt     DateTime   @default(now())
  projectId     String
  project       Project    @relation(fields: [projectId], references: [id])

  @@index([projectId])
}

model SBOM {
  id                      String   @id @default(cuid())
  projectId               String   @unique
  project                 Project  @relation(fields: [projectId], references: [id])
  components              Json
  totalDependencies       Int      @default(0)
  directDependencies      Int      @default(0)
  transitiveDependencies  Int      @default(0)
  generatedAt             DateTime @default(now())
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}

// ============================================
// BILLING & SUBSCRIPTIONS
// ============================================

enum SubscriptionStatus {
  TRIALING
  ACTIVE
  PAST_DUE
  CANCELED
  UNPAID
}

enum PlanTier {
  FREE
  STARTER
  PRO
  TEAM
  BUSINESS
  ENTERPRISE
  ENTERPRISE_PLUS
  GOVERNMENT
}

model Subscription {
  id                   String             @id @default(cuid())
  stripeCustomerId     String             @unique
  stripeSubscriptionId String?            @unique
  stripePriceId        String?
  status               SubscriptionStatus @default(TRIALING)
  planTier             PlanTier           @default(FREE)
  trialEndsAt          DateTime?
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean            @default(false)
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  orgId                String             @unique
  org                  Organization       @relation(fields: [orgId], references: [id])
  usageRecords         UsageRecord[]
}

model UsageRecord {
  id             String       @id @default(cuid())
  subscriptionId String
  subscription   Subscription @relation(fields: [subscriptionId], references: [id])
  metric         String       // 'scans', 'projects', 'ai_queries', 'team_members'
  quantity       Int
  periodStart    DateTime
  periodEnd      DateTime
  createdAt      DateTime     @default(now())
}

model Plan {
  id              String   @id @default(cuid())
  name            String
  tier            PlanTier @unique
  stripePriceId   String?
  monthlyPrice    Int      // in cents
  yearlyPrice     Int      // in cents (annual)
  maxProjects     Int
  maxScansPerMonth Int
  maxTeamMembers  Int
  maxAIQueries    Int
  features        Json     // array of feature strings
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// ============================================
// PASSWORD RESET & AUTH TOKENS
// ============================================

model PasswordReset {
  id        String   @id @default(cuid())
  token     String   @unique @default(cuid())
  email     String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
}

model OAuthAccount {
  id           String   @id @default(cuid())
  provider     String   // 'github', 'google'
  providerId   String   // external account ID
  accessToken  String?
  refreshToken String?
  expiresAt    DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  userId       String
  user         User     @relation(fields: [userId], references: [id])

  @@unique([provider, providerId])
}

// ============================================
// API KEYS
// ============================================

model APIKey {
  id          String    @id @default(cuid())
  name        String
  keyHash     String    @unique
  keyPrefix   String    // First 8 chars for display
  lastUsedAt  DateTime?
  expiresAt   DateTime?
  scopes      Json      // array of permission scopes
  createdAt   DateTime  @default(now())
  orgId       String
  org         Organization @relation(fields: [orgId], references: [id])

  @@index([orgId])
}

// ============================================
// AUDIT LOG
// ============================================

model AuditLog {
  id        String   @id @default(cuid())
  action    String   // 'user.login', 'project.create', 'scan.start', etc.
  actor     String   // user ID or 'system'
  target    String?  // resource ID
  metadata  Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  orgId     String
  org       Organization @relation(fields: [orgId], references: [id])

  @@index([orgId])
  @@index([createdAt])
}

// ============================================
// SITE ANALYTICS
// ============================================

model SiteStats {
  id        String   @id @default("global")
  videoViews Int     @default(0)
  pageViews  Int     @default(0)
  updatedAt  DateTime @updatedAt
}

// ============================================
// BUSINESS VERIFICATION (KYB)
// ============================================

enum VerificationStatus {
  UNVERIFIED
  PENDING
  UNDER_REVIEW
  VERIFIED
  REJECTED
}

model BusinessVerification {
  id                    String             @id @default(cuid())
  orgId                 String             @unique
  org                   Organization       @relation(fields: [orgId], references: [id], onDelete: Cascade)

  status                VerificationStatus @default(UNVERIFIED)

  // Company Details
  companyLegalName      String?
  companyTradingName    String?
  companyRegistrationNo String?           // Company House / EIN / ABN etc.
  companyType           String?           // LLC, Ltd, Corp, Sole Trader, etc.
  industry              String?
  companyWebsite        String?
  companyEmail          String?
  companyPhone          String?

  // Registered Address
  regAddress            String?
  regCity               String?
  regState              String?
  regPostalCode         String?
  regCountry            String?

  // Verification metadata
  submittedAt           DateTime?
  reviewedAt            DateTime?
  reviewedBy            String?           // Admin user ID who reviewed
  rejectionReason       String?
  verifiedAt            DateTime?
  expiresAt             DateTime?         // Re-verification needed after this

  // Document references (URLs or file IDs)
  documentIds           Json?             // Array of uploaded doc references

  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
}

// ============================================
// CUSTOMER BADGES (Pro+ only)
// ============================================

enum BadgeType {
  PROTECTED
  CERTIFIED
  ENTERPRISE
  GOVERNMENT
  REALTIME
}

enum BadgeStatus {
  ACTIVE
  SUSPENDED
  EXPIRED
  REVOKED
}

model CustomerBadge {
  id                String      @id @default(cuid())
  badgeCode         String      @unique      // Public badge ID e.g. ANCHOR-xxxx
  orgId             String
  org               Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  type              BadgeType   @default(PROTECTED)
  status            BadgeStatus @default(ACTIVE)

  // Verification
  secretKey         String                  // HMAC secret for tamper-proof verification
  verificationCount Int         @default(0)
  lastVerifiedAt    DateTime?

  // Metadata
  planTier          String?                 // Plan at time of issue
  securityScore     Int?
  complianceFrameworks Json?                // Array of framework names

  // Embed info
  embedCode         String?    @db.Text
  imageUrl          String?
  verificationUrl   String?

  issuedAt          DateTime   @default(now())
  expiresAt         DateTime                // Badge validity period
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  @@index([orgId])
  @@index([status])
}

# ============================================
# ANCHOR SECURITY - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3001
APP_URL=http://localhost:3000
API_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3000

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# Local: postgresql://user:password@localhost:5432/anchor
# Supabase: postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres
# Railway: postgresql://postgres:[PASSWORD]@[HOST].railway.app:5432/railway
# Neon: postgresql://[USER]:[PASSWORD]@[ENDPOINT].neon.tech/neondb
DATABASE_URL=postgresql://anchor:password@localhost:5432/anchor_security

# ============================================
# AUTHENTICATION
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=change-me-to-a-secure-random-string

# ============================================
# STRIPE BILLING
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# OAUTH - GITHUB
# ============================================
# Get from: https://github.com/settings/developers
# Create OAuth App with callback: {APP_URL}/api/auth/github/callback
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
OAUTH_REDIRECT_BASE=http://localhost:3000

# ============================================
# OAUTH - GOOGLE
# ============================================
# Get from: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID with callback: {APP_URL}/api/auth/google/callback
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ============================================
# EMAIL (Resend)
# ============================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_...
FROM_EMAIL=noreply@yourdomain.com

# ============================================
# AI SERVICES
# ============================================
# Google Gemini - Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Anthropic Claude (CLI) - Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# ============================================
# GITHUB APP (PR Scanning)
# ============================================
# Get from: https://github.com/settings/apps
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_APP_WEBHOOK_SECRET=

# ============================================
# ERROR MONITORING (Optional)
# ============================================
# Sentry - Get from: https://sentry.io
SENTRY_DSN=

# ============================================
# ANALYTICS (Optional)
# ============================================
GA_TRACKING_ID=
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com


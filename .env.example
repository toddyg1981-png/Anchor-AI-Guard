# Environment Configuration Example
# Copy this file to .env.local for local development
# Copy this file to .env.production for production deployment

# =============================================================================
# API KEYS (Required)
# =============================================================================

# Gemini AI API Key for security analysis
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment: development, staging, production
VITE_APP_ENV=development

# Application Name
VITE_APP_NAME=Anchor Security Dashboard

# API Base URL (backend service)
VITE_API_BASE_URL=http://localhost:3001/api

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable AI Analysis Features
VITE_ENABLE_AI_ANALYSIS=true

# Enable Advanced Security Hooks
VITE_ENABLE_SECURITY_HOOKS=true

# Enable Mock Data (for development/testing)
VITE_USE_MOCK_DATA=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Rate Limiting (requests per minute)
VITE_RATE_LIMIT_RPM=60

# Session Timeout (in minutes)
VITE_SESSION_TIMEOUT=30

# Enable Content Security Policy
VITE_ENABLE_CSP=true

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================

# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# Google Analytics ID
VITE_GA_ID=

# LogRocket App ID
VITE_LOGROCKET_ID=

# =============================================================================
# PERFORMANCE
# =============================================================================

# Enable Service Worker
VITE_ENABLE_SERVICE_WORKER=false

# Cache Duration (in seconds)
VITE_CACHE_DURATION=3600

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Show Debug Information
VITE_DEBUG_MODE=false

# Enable React DevTools
VITE_ENABLE_DEVTOOLS=true
